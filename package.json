{
  "name": "my-design-system",
  "version": "0.1.0",
  "private": false,
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    }
  },
  "sideEffects": false,
  "description": "Accessible React + TypeScript component library with styled-components theming and Storybook docs.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourname/my-design-system.git"
  },
  "license": "MIT",
  "keywords": [
    "design-system",
    "react",
    "storybook",
    "styled-components",
    "a11y",
    "typescript"
  ],
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "build:storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier -w .",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "echo 'no prepare step'"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "styled-components": ">=5.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-testing-library": "^6.4.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/react": "^10.0.2",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@types/styled-components": "^5.1.34",
    "axe-core": "^4.10.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "styled-components": "^6.1.13",
    "storybook": "^8.6.14",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "vite": "^5.4.10",
    "vitest": "^2.1.4",
    "jsdom": "^25.0.1",
    "vite-tsconfig-paths": "^5.0.1"
  }
}


